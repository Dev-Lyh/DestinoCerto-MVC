@model IEnumerable<Pacotes_Turisticos>;

@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutDC";
}

<nav>
    <div class="body_content">
        <div class="banner">
            <div>
                <div>
                    <h1>
                        Seja Bem-Vindo à 
                    </h1>
                </div>
                <div>
                    <mark class="m-b">
                        <i class="fas fa-plane-departure"></i> Destino Certo
                    </mark>
                </div>
            </div>
        </div>
        <div class="text-intro">
            <h2>Conheça nossos pacotes!</h2>
                <div class="f-grid-page">
                    <div class="gr-p-u">
                    
                    @foreach (Pacotes_Turisticos p in Model.Take(3))
                    {
                        <div class="p-u">
                            <div class="img-bg img-bg1"></div>
                            <h3><i class="fas fa-suitcase"></i> @p.Nome</h3>
                            <p><i class="fas fa-map-marker-alt i-yellow"></i> @p.Origem</p>
                            <p><i class="fas fa-plane i-yellow"></i> @p.Destino</p>
                            <p>
                                <span>
                                    <i class="fas fa-angle-double-right i-yellow"></i>
                                    @p.Atrativos
                                </span>
                            </p>
                            <p><i class="fas fa-redo-alt i-yellow"></i> @p.Saida.ToShortDateString()</p>
                            <p><i class="fas fa-undo-alt i-yellow"></i> @p.Retorno.ToShortDateString()</p>
                            <p><i class="fas fa-address-card i-yellow"></i> @p.Usuario</p>
                        </div>                    
                    }
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>
